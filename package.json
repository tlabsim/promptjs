{
  "name": "@tlabsinc/promptjs",
  "version": "0.1.0",
  "description": "Framework-agnostic modals, dialogs, and toasts with simple APIs and a single stylesheet.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./styles/promptjs.css",
    "./style.css": "./styles/promptjs.css",
    "./tokens.css": "./styles/tokens.css"
  },
  "files": [
    "dist",
    "styles",
    "locales",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "modal",
    "dialog",
    "toast",
    "notification",
    "javascript",
    "typescript",
    "ui"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.0",
    "postcss-import": "^16.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
