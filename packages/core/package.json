{
  "name": "@tlabsinc/promptjs-core",
  "private": false,
  "publishConfig": { "access": "public" },
  "version": "0.1.0",
  "description": "Internal workspace for PromptJS core (not published).",
  "type": "module",
  "sideEffects": false,

  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },

  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check": "tsc -p tsconfig.json --noEmit"
  },

  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
